---
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="flex flex-col justify-start items-center overflow-x-hidden">
		<Header />
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: system-ui;
		background: #09182F;
		background-size: 224px;
	}

	@font-face {
		font-family: "Inter";
		src: url('https://fonts.googleapis.com/css2?family=Nunito:wght@300&display=swap');
	}
</style>
